<h3>Doctor: <%= link_to @doctor.name, doctor_path %> <br /></h3>
<p>Department: <%= link_to @doctor.department, doctor_path %></p>

<h3>Appointments:</h3>
  <% @doctor.appointments.each do |appt| %>
  <% @doctor_patient = @doctor.patients.find(appt.patient_id) %>
  <li>
    <%= link_to @doctor_patient.name, patient_path(@doctor_patient) %> - <%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %>
  </li>
<% end %>
